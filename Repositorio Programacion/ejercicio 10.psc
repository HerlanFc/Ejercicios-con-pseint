Algoritmo ej10
    Escribir "Ingrese un número n "
    Leer n
	
	
    Para i <- 1 Hasta n Con Paso 1 Hacer

        Para j <- 1 Hasta i Con Paso 1 Hacer
            Escribir Sin Saltar "*";
        FinPara
	
        Escribir ""; 
		
    FinPara
    Para i <- n Hasta 1 Con Paso -1 Hacer
      
        Para j <- 2 Hasta i Con Paso 1 Hacer
            Escribir sin saltar"*";
        FinPara
		
        
        Escribir ""; 
    FinPara
FinAlgoritmo
